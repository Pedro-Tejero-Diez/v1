    <td> <a class="btn btn-primary" th:href="@{/skins/getskin/{id} (id=${PlayerSkin.player_skin_id})}"
                        th:object="${playerskins}">Select</a>
                </td>
                <td> <a class="btn btn-primary" th:href="@{/skins/color (id=${PlayerSkin.player_skin_id})}}"
